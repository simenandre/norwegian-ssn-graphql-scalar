{
  "name": "norwegian-ssn-graphql-scalar",
  "version": "1.0.0",
  "description": "Scalar type for Norwegian Social Security Number.",
  "repository": "github:simenandre/norwegian-ssn-graphql-scalar",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "build": "bob build --single",
    "lint": "eslint --ext .ts \"./src/**/*.ts\"",
    "test": "jest --forceExit --no-watchman && yarn bundlesize",
    "prepare-release": "yarn build && yarn test",
    "release": "yarn prepare-release && bob prepack && npm publish dist",
    "ci:release:canary": "node bump.js && bob prepack && npm publish dist --tag alpha --access public",
    "bundlesize": "yarn build && cd bundle-test/ && yarn && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add -f"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "roots": [
      "src"
    ]
  },
  "dependencies": {
    "norwegian-national-id-validator": "3.0.0"
  },
  "devDependencies": {
    "@graphql-tools/merge": "^6.0.12",
    "@graphql-tools/schema": "^7.1.3",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "bob-the-bundler": "^1.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "graphql": "^15.5.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semver": "^7.3.4",
    "ts-jest": "^26.4.4",
    "typescript": "^3.9.9"
  },
  "peerDependencies": {
    "graphql": "^0.8.0 || ^0.9.0 || ^0.10.0 || ^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0 || ^15.0.0"
  },
  "engines": {
    "node": ">=10"
  },
  "typescript": {
    "definition": "dist/index.d.ts"
  }
}
